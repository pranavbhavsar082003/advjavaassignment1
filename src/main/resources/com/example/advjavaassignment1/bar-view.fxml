<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="658.0" prefWidth="733.0" spacing="10" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.advjavaassignment1.BarViewController">
    <children>
        <Button fx:id="btnViewTable" onAction="#viewTable" style="-fx-background-color: yellow;" stylesheets="@style.css" text="View Table" />
        <AnchorPane VBox.vgrow="ALWAYS">
            <BarChart fx:id="barChart" title="Orbital Launches" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
                <xAxis>
                    <CategoryAxis label="Country" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Launch Count" />
                </yAxis>
            </BarChart>
        </AnchorPane>
    </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
